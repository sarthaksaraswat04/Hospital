<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.8/css/line.css">
    <link rel="stylesheet" href="/css/patientpanel.css">
    <link rel="icon" href="/images/logo.png" type="image/icon type">
    <title>Patient Panel</title>
</head>
<body>
    <nav>

        <div class="search-area">

            <input type="search" placeholder="Search">
        </div>
        <span class="msg-count"></span>
        <span class="notification-count"></span>
        <div class="icons">
            <i class="uil uil-envelope"></i>
            <i class="uil uil-bell"></i>
            <!-- Add more icons as needed -->
        </div>
        <div class="profile">
            <div class="profile-img">
                <% var a=data.ph %>
                    <% var b=a.substring(7); var c="/" +b; %>
                        <img src=<%=c%> alt="">
            </div>
            <div class="profile-name">
                <%= data.pn %>
                    <img id="dropdown-icon" onclick="toggleDropdown()" src="/images/down-arrow.png" alt="">
                    <div class="dropdown-content" id="myDropdown">
                        <a href="">Edit Profile</a>
                        <a href="/login.html" class="logout-btn">Logout</a>
                    </div>
            </div>
        </div>
    </nav>

    <!-- Side Menu -->
    <div class="side-menu">
        <div class="logo">
            <a href=""><img src="/images/logo.png" alt="">Horizon</a>
        </div>

        <a href="/patientpanel" class="menu-item" onclick="clickEffect(this)">Dashboard</a>
        <a href="/patient_reports" class="menu-item" onclick="clickEffect(this)">Reports</a>
        <a href="/patient_prescription" class="menu-item" onclick="clickEffect(this)">My Prescription</a>
        <a href="/patient_appointments" class="menu-item" onclick="clickEffect(this)">Appointments</a>
        <a href="/patient_messages" class="menu-item" onclick="clickEffect(this)">Messages</a>
        <a href="/patient_finddoctor" class="menu-item" onclick="clickEffect(this)">Find A Doctor</a>
        <a href="/patient_feedback" class="menu-item" onclick="clickEffect(this)">Feedback</a>
        <hr color="gray" id="logout-hr">
        <a href="#" class="menu-item" id="logout-link">Log Out</a>
    </div>


    <!-- Content Area -->

    <div class="content" id="doctorContent">
        <h1>Doctor Content</h1>
        <form action="/doctorSearch" method="post">
            <div class="doctor-search-area">
                <input type="search" placeholder="Search for Doctors, Department" name="dsearch">
            </div>


        </form>
        <div class="doctors-card">
            <div class="doctor-top">
                <div class="profilephoto"></div>
                <div class="doctor-info">
                    <h3>Sarthak Saraswat</h3>
                    <h5>
                        <ul>
                            <li>Cardiologist</li>
                        </ul>
                    </h5>
                </div>
            </div>

            <div class="doctorinfo2">
                <h5>Experience: 10 years</h5>
                <h5>Fees: 500</h5>
                <h5><i class="uil uil-phone"></i>:+91 500</h5>
            </div>
            <div class="apn-btn">Book an Appointment</div>
            <!-- <%=data.dn%>
                <%=data.dp%> -->
        </div>

        <!-- Add billing content here -->
    </div>


    <script>
        function clickEffect(menuItem) {
            var menuItems = document.querySelectorAll('.menu-item');
            menuItems.forEach(function (item) {
                item.classList.remove('active');
            });
            menuItem.classList.add('active');
        }
        // ---------dropdown --------
        function toggleDropdown() {
            var dropdown = document.getElementById('myDropdown')
            dropdown.classList.toggle("show");
        }
    </script>
</body>

</html>